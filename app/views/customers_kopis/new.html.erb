<h1>Existing Customers Kopi</h1>

<%= form_with scope: :customer, url: kopis_path, local: true do |form| %>
<%= form.collection_check_boxes :customer_ids, @customers_kopi, :id, :name %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_area :name %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>


<%= link_to 'Back', customers_kopis_path %>